{
	"name": "NostrAuth",
	"version": "0.0.1",
	"author": "MediaWiki Nostr Extensions",
	"url": "https://github.com/example/mediawiki-nostr",
	"descriptionmsg": "nostrauth-desc",
	"license-name": "MIT",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.42.0"
	},
	"config": {
		"NostrAuthEnabled": {
			"value": false,
			"description": "Enable Nostr authentication"
		},
		"NostrAllowedNIP5Domains": {
			"value": null,
			"description": "Array of allowed NIP-5 domains (null = no restriction)"
		}
	},
	"AutoloadClasses": {
		"NostrAuth\\Hooks": "includes/Hooks.php",
		"NostrAuth\\SpecialNostrLogin": "includes/SpecialNostrLogin.php",
		"NostrAuth\\AuthProvider": "includes/AuthProvider.php",
		"NostrAuth\\NIP5Verifier": "includes/NIP5Verifier.php"
	},
	"SpecialPages": {
		"NostrLogin": "NostrAuth\\SpecialNostrLogin"
	},
	"Hooks": {
		"GetPreferences": "prefs",
		"BeforePageDisplay": "prefsDisplay"
	},
	"HookHandlers": {
		"prefs": {
			"class": "NostrAuth\\Hooks"
		},
		"prefsDisplay": {
			"class": "NostrAuth\\Hooks"
		}
	},
	"ExtensionMessagesFiles": {
		"NostrAuthAlias": "NostrAuth.alias.php"
	},
	"MessagesDirs": {
		"NostrAuth": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "NostrAuth"
	},
	"ResourceModules": {
		"ext.nostrAuth.bech32": {
			"scripts": [
				"resources/lib/bech32.bundle.js"
			]
		},
		"ext.nostrAuth": {
			"scripts": [
				"resources/ext.nostrAuth.js"
			],
			"dependencies": []
		},
		"ext.nostrAuth.prefs": {
			"scripts": [
				"resources/ext.nostrAuth.prefs.js"
			],
			"dependencies": [
				"ext.nostrAuth.bech32",
				"mediawiki.api",
				"mediawiki.htmlform"
			],
			"messages": [
				"nostrauth-import-pubkey-button",
				"nostrauth-importing",
				"nostrauth-import-success",
				"nostrauth-import-failed",
				"nostrauth-import-invalid",
				"nostrauth-import-error",
				"nostrauth-extension-detected"
			]
		}
	},
	"manifest_version": 2
}

