{
	"name": "NostrChat",
	"version": "0.0.1",
	"author": "MediaWiki Nostr Extensions",
	"url": "https://github.com/Hitchwiki/NostrChat",
	"descriptionmsg": "nostrchat-desc",
	"license-name": "MIT",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.42.0"
	},
	"config": {
		"NostrChatEnabled": {
			"value": true,
			"description": "Enable Nostr chat sidebar widget"
		},
		"NostrChatChannel": {
			"value": "hitchwiki",
			"description": "Channel hashtag for filtering messages"
		},
		"NostrChatRelays": {
			"value": ["wss://relay.trustroots.org", "wss://relay.nomadwiki.org"],
			"description": "Array of Nostr relay URLs"
		}
	},
	"AutoloadClasses": {
		"NostrChat\\Hooks": "includes/Hooks.php",
		"NostrChat\\NostrChat": "includes/NostrChat.php"
	},
	"Hooks": {
		"BeforePageDisplay": "main"
	},
	"HookHandlers": {
		"main": {
			"class": "NostrChat\\Hooks"
		}
	},
	"MessagesDirs": {
		"NostrChat": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "NostrChat"
	},
	"ResourceModules": {
		"ext.nostrChat": {
			"scripts": [
				"resources/ext.nostrChat.js"
			],
			"styles": [
				"resources/ext.nostrChat.css"
			],
			"dependencies": []
		}
	},
	"manifest_version": 2
}
